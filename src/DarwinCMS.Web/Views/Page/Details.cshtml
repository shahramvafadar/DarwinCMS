@model DarwinCMS.Application.DTOs.Pages.PagePublicDto
@{
    ViewData["Title"] = string.IsNullOrWhiteSpace(Model?.SeoTitle) ? Model?.Title : Model?.SeoTitle;
}

<seo-meta />

@if (Model is null)
{
    <div class="alert alert-warning">Die Seite ist nicht verfügbar.</div>
}
else
{
    <article class="container">
        <header class="mb-4">
            <h1 class="mb-1">@Model.Title</h1>
            @if (!string.IsNullOrWhiteSpace(Model.Summary))
            {
                <p class="text-muted">@Model.Summary</p>
            }
        </header>

        <section>
            @Html.Raw(Model.ContentHtml ?? string.Empty)
        </section>
    </article>
}
