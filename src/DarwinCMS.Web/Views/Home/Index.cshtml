@model DarwinCMS.Application.DTOs.Pages.PagePublicDto
@{
    Layout = "_Layout";
}

@if (Model == null)
{
    <div class="alert alert-info">Keine Startseite konfiguriert. Bitte eine Seite mit Slug "home" erstellen.</div>
}
else
{
    <article class="prose">
        <h1 class="mb-3">@Model.Title</h1>
        @Html.Raw(Model.ContentHtml ?? string.Empty)
    </article>
}
