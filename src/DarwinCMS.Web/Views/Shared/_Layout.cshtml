@using DarwinCMS.Web.Infrastructure.Settings
@inject ISiteSettingsAccessor Settings

@{
    // Read site title for branding (fallback to "Darwin CMS" if not set)
    var siteTitle = await Settings.GetStringAsync(SiteSettingKeys.SiteTitle, null, "Darwin CMS");
    Layout = null; // This is the master layout
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @siteTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <seo-meta />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="border-bottom mb-3">
        <div class="container py-3 d-flex justify-content-between align-items-center">
            <a class="navbar-brand fs-4 fw-bold text-decoration-none" href="/">@siteTitle</a>
            <div>
                @await Component.InvokeAsync("MainMenu", new { position = "header" })
            </div>
        </div>
    </header>

    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="border-top">
        <div class="container py-4">
            @await Component.InvokeAsync("MainMenu", new { position = "footer" })
            <div class="text-muted small mt-2">© @DateTime.UtcNow.Year @siteTitle</div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
