@model List<DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Menus.MenuListItemViewModel>

@{
    ViewData["Title"] = "Recycle Bin - Menus";
}

<h1 class="mb-4">
    <i class="fas fa-trash-restore me-2"></i> Recycle Bin
</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No deleted menus found.</div>
}
else
{
    @await Component.InvokeAsync("RecycleBinList", new
    {
        items = Model,
        controllerName = "Menus",
        firstFieldName = "Title",
        secondFieldName = "Position",
        firstPropertyName = "Title",
        secondPropertyName = "Position"
    })
}

<a asp-action="Index" class="btn btn-outline-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i> Back to Menus
</a>
