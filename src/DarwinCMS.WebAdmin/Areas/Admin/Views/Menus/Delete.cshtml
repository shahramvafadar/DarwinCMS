@model DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Menus.DeleteMenuViewModel

@{
    ViewData["Title"] = "Delete Menu";
}

<h1 class="text-danger mb-4">
    <i class="fas fa-trash-alt me-2"></i> Delete Menu
</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to permanently delete this menu?</strong><br />
    This action cannot be undone.
</div>

<dl class="row mb-4">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Position</dt>
    <dd class="col-sm-9">@Model.Position</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Cancel
        </a>
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-check-circle me-1"></i> Yes, Delete Permanently
        </button>
    </div>
</form>
