@model DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Menus.EditMenuItemViewModel

@{
    ViewData["Title"] = "Delete Menu Item";
}

<h1 class="mb-4 text-danger">
    <i class="fas fa-trash-alt me-2"></i> Delete Menu Item
</h1>

<div class="alert alert-warning">
    Are you sure you want to permanently delete the following item?
</div>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Link Type</dt>
        <dd class="col-sm-9">@Model.LinkType</dd>

        <dt class="col-sm-3">Display Condition</dt>
        <dd class="col-sm-9">@Model.DisplayCondition</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="MenuId" />

    <div class="d-flex justify-content-between">
        <a asp-action="Index" asp-route-menuId="@Model.MenuId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Cancel
        </a>

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-check-circle me-1"></i> Yes, Delete
        </button>
    </div>
</form>
