@model List<DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Menus.MenuItemListItemViewModel>

@{
    ViewData["Title"] = "Deleted Menu Items";
}

<h1 class="mb-4">
    <i class="fas fa-trash-restore me-2"></i> Deleted Menu Items
</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No deleted menu items found.</div>
}
else
{
    @await Component.InvokeAsync("RecycleBinList", new
    {
        items = Model,
        controllerName = "MenuItems",
        firstFieldName = "Title",
        secondFieldName = "Link Type",
        firstPropertyName = "Title",
        secondPropertyName = "LinkType"
    })
}

<a asp-action="Index" class="btn btn-outline-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i> Back to Menu
</a>
