@model List<DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Roles.RoleListItemViewModel>

@{
    ViewData["Title"] = "Recycle Bin";
}

<div class="container mt-4">
    <h2>
        <i class="fas fa-trash-restore me-2"></i> Recycle Bin
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            No deleted roles found.
        </div>
    }
    else
    {
        @await Component.InvokeAsync("RecycleBinList", new
        {
            items = Model,
        controllerName = "Roles",
        firstFieldName = "Name",
        secondFieldName = "DisplayName",
        firstPropertyName = "Name",
        secondPropertyName = "DisplayName"
        })
        }

    <a asp-action="Index" class="btn btn-outline-secondary mt-3">
        <i class="fas fa-arrow-left me-1"></i> Back to Roles
    </a>
</div>
