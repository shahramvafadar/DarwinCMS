@model List<DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Permissions.PermissionListViewModel>

@{
    ViewData["Title"] = "Recycle Bin - Permissions";
}

<h1 class="mb-4">
    <i class="fas fa-trash-restore me-2"></i> Recycle Bin - Permissions
</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No deleted permissions found.</div>
}
else
{
    @await Component.InvokeAsync("RecycleBinList", new
    {
        items = Model,
        controllerName = "Permissions",
        firstFieldName = "Name",
        secondFieldName = "DisplayName",
        firstPropertyName = "Name",
        secondPropertyName = "DisplayName"
    })
}

<a asp-action="Index" class="btn btn-outline-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i> Back to Permissions
</a>
