@model List<DarwinCMS.WebAdmin.Areas.Admin.ViewModels.SiteSettings.SiteSettingListViewModel>

@{
    ViewData["Title"] = "Recycle Bin";
}

<h1 class="mb-4">
    <i class="fas fa-trash-restore me-2"></i> Recycle Bin
</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No deleted site settings found.</div>
}
else
{
    @await Component.InvokeAsync("RecycleBinList", new
    {
        items = Model,
        controllerName = "SiteSettings",
        firstFieldName = "Key",
        secondFieldName = "Category",
        firstPropertyName = "Key",
        secondPropertyName = "Category"
    })
}

<a asp-action="Index" class="btn btn-outline-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i> Back to Active List
</a>
