@{
    ViewData["Title"] = "Password Reset Requested";
    Layout = "~/Areas/Admin/Views/Shared/_MinimalLayout.cshtml";
}

<div class="text-center mt-5">
    <h3 class="text-success mb-3">
        <i class="fas fa-check-circle me-2"></i> Request Received
    </h3>
    <p>If the email you entered exists in our system, a reset link will be sent shortly.</p>

    <div class="mt-4">
        <a asp-action="Login" class="btn btn-outline-primary">
            <i class="fas fa-sign-in-alt me-1"></i> Back to Login
        </a>
    </div>
</div>
