@model DarwinCMS.WebAdmin.Areas.Admin.ViewModels.Auth.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Areas/Admin/Views/Shared/_MinimalLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow rounded">
            <div class="card-body">
                <h4 class="text-center mb-4">Set New Password</h4>

                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check-circle me-1"></i> Reset Password
                        </button>
                    </div>

                    <div class="mt-3 text-center">
                        <a asp-action="Login" class="small text-muted">
                            <i class="fas fa-sign-in-alt me-1"></i> Back to login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
